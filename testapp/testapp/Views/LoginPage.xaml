<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="testapp.Views.LoginPage" Title="Login">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sign Up" Clicked="OnSignUpButtonClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>

        <StackLayout Padding="30" VerticalOptions="StartAndExpand">
            <Entry x:Name="usernameEntry" Placeholder="Gebruikersnaam" />
            <Entry x:Name="passwordEntry" Placeholder="Wachtwoord" IsPassword="true" />
            <Button Text="Login" TextColor="White" Clicked="OnLoginButtonClicked" />
            <Label x:Name="messageLabel" />
            <Label x:Name="debugText" TextColor="Red" IsVisible="true"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>